<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/mainpageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/mainpage_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"

            >

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#00FFFFFF"
                android:onClick="onClick"
                android:tint="#000000"
                app:srcCompat="@drawable/ic_back"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:gravity="left|center"
                android:text="Finance"
                android:textSize="24dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/refresh_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:onClick="onClick"
                android:tint="#337736"
                app:srcCompat="@drawable/ic_refresh" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                >

                <TextView
                    android:id="@+id/dropdownarrow_numberpickersarea_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="filter"
                    android:layout_marginBottom="-12dp"
                    android:textSize="15dp"

                    />

                <ImageButton
                    android:id="@+id/dropdownnarrow_numberpickersarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="#00FFFFFF"
                    android:onClick="onClick"
                    android:tint="#000000"

                    app:srcCompat="@drawable/ic_dropdownarrow" />

                <ImageButton
                    android:id="@+id/upnarrow_numberpickersarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="#00FFFFFF"
                    android:onClick="onClick"
                    android:tint="#000000"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_upnarrow" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/numberpickersArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#33FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year: " />

            <NumberPicker
                android:id="@+id/numberpicker_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:descendantFocusability="blocksDescendants"
                android:scaleX="1.25"
                android:scaleY="1.25"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Month: " />

            <NumberPicker
                android:id="@+id/numberpicker_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:scaleX="1.25"
                android:scaleY="1.25"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/peekValueArea"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp"
            android:weightSum="3"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="monthly income"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalIncomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$ 0.00"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/todayExpensesTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="today expense"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalExpenseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$ 0.00"
                    android:textSize="28sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:text="balance"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/balanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="$ 0.00"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/peekValueArea">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:text="Record(s): "
                android:textSize="18sp" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/titleText"
            android:layout_gravity="bottom"
            android:overScrollMode="never"
            tools:listitem="@layout/cardviewcontents"

            />


    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:onClick="onClick"
        android:padding="20dp"
        android:src="@drawable/ic_add"
        android:tint="#00FFFFFF"
        app:backgroundTint="#E6FFFFFF"
        app:maxImageSize="36dp"

        >


    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</merge>