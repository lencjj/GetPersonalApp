<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/mainpageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/mainpage_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"

            >

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="#00FFFFFF"
                android:onClick="onClick"
                android:tint="#000000"
                app:srcCompat="@drawable/ic_back"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:text="Money management"
                android:textSize="24dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/peekValueArea"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="top|center"
            android:orientation="vertical"
            android:padding="12dp"
            android:weightSum="3"

            >

            <TextView
                android:id="@+id/incomeValue_txt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="INCOME"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/spentValue_txt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SPENT"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/balanceValue_txt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="BALANCE"
                android:textSize="22sp"

                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/peekValueArea">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:text="Today's expense(s): "
                android:textSize="18sp" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/titleText"
            android:layout_gravity="bottom"
            android:overScrollMode="never"
            tools:listitem="@layout/cardviewcontents"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center">

        <TextView
            android:id="@+id/viewAllExpenses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:gravity="center|bottom"
            android:onClick="onClick"
            android:text="Click to view all expenses"
            android:textSize="18sp" />
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:onClick="onClick"
        android:padding="20dp"
        android:src="@drawable/ic_add"
        android:tint="#00FFFFFF"
        app:backgroundTint="#FFFFFFFF"
        app:maxImageSize="36dp"
        app:rippleColor="#00FFFFFF"

        >


    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</merge>